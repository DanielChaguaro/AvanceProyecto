@model List<ProyectoInicial.Models.Usuario>
@{
    ViewData["Title"] = "UsuariosIndex";
}

<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Usuario")'">Nuevo Usuario</button>


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Perfil</th>
            <th scope="col">UsuarioP</th>
            <th scope="col">Contrasena</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.IdUsuario</th>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>

                <td>@item.Perfil</td>
                <td>@item.UsuarioP</td>
                <td>@item.Contrasena</td>
                <td>

                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Delete" asp-route-IdUsuario="@item.IdUsuario" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                        <a asp-action="Edit" asp-route-IdUsuario="@item.IdUsuario" class="btn btn-warning"><i class="bi bi-pencil-square"></i></a>
                        
                    </div>

                </td>
            </tr>

        }
    </tbody>
</table>