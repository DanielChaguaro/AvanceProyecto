﻿
@model List<ProyectoInicial.Models.Libros>

@{
    ViewData["Title"] = "Lista Libros";
}



<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "InventarioLibros")'">Nuevo Libro</button>
<link href="//netdna.bootstrapcdn.com/bootstrap/3.1.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Autor</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio</th>
            
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
    
            <tr>
                <th scope="row">@item.IdLibro</th>
                <td>@item.Nombre</td>
                <td>@item.Autor</td>
               
                <td>@item.cantidad</td>
                <td>@item.precio</td>
                <td>

                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Delete" asp-route-IdLibro="@item.IdLibro" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        <a asp-action="Edit" asp-route-IdLibro="@item.IdLibro" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i></a>
                        <a asp-action="Details" asp-route-IdLibro="@item.IdLibro" class="btn btn-info"><i class="fa-regular fa-eye"></i></a>
                    </div>

                </td>
            </tr>
     
    }

    </tbody>
</table>

