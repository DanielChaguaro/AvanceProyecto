@model List<ProyectoInicial.Models.Prestamo>

@{
    ViewData["Title"] = "Lista Prestamos";
}



<h1>@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Prestamo")'">Nuevo Prestamo</button>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Producto</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio Unitario</th>
            <th scope="col">Total</th>

            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            

            <tr>
                <th scope="row">@item.IdPrestamo</th>
                <td>@item.IdProducto</td>
                <td>@item.Cantidad</td>

                <td>@item.PrecioUnitario</td>
                <td>@item.Total</td>
                <td>

                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Delete" asp-route-IdPrestamo="@item.IdPrestamo" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        <a asp-action="Edit" asp-route-IdPrestamo="@item.IdPrestamo" class="btn btn-warning"><i class="fa-regular fa-pen-to-square"></i></a>
                        <a asp-action="Details" asp-route-IdPrestamo="@item.IdPrestamo" class="btn btn-info"><i class="fa-regular fa-eye"></i></a>
                    </div>

                </td>
            </tr>

        }
    </tbody>
</table>
